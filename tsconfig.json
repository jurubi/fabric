{

  "compilerOptions": {

    "target": "ES2020",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
		"moduleResolution": "node",
    "typeRoots": [

			"./node_modules/@types",
			"./src/@types"

			],
    "types": [

			"node",
			"fabric",
			"emscripten"

		],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
		"removeComments": true,
		"allowJs": true,
		"checkJs": false,
		"outDir": "./dist",
  },

	"files": [

		"src/index.ts"

	],
	"exclude": [

		"node_modules",
		"test",
		"dist"

	]

}
